%Готовые запчасти для шрифтов типа 3

%Процедура, для вставки в свойство /BuildChar
/legacy-build-char {
	1 index /Encoding get
	%[this, charCode, this.Encoding]
	exch get
	%[this, charName]
	1 index /BuildGlyph get 
	%[this, charName, this.BuildGlyph]
	exec
} def

