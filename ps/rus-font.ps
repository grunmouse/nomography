%% Русский чертёжный шрифт
%% Кодировка, идеологически подобна КОИ8, но со следующими отличиями:
%% Поменяны местами заглавные и строчные буквы, чтобы удобнее было набирать транслитерированный текст
%% Задублированы ъ, ь, ё


<<
	%Required for all fonts
	/FontType 3
	/FontMatrix [0.1 0 0 0.1 0 0] %Наклонить потом
	
	%Required for base fonts
	
	%Кодовая страница. Здесь должны быть мои буквы
	%Кодировка будет отображать введёные буквы первой половины таблицы ASCII на русские буквы
	%Из-за этого выпадают первые 32 символа
	%Для именования букв используется следующая схема:
	% j - й или йотирование гласной в сочетании
	% v - ж
	% w - в
	% x - ь
	% y - ы
	% sh - ш как в "шинус"
	% shx - щ - ш с мягким знаком
	% ch - ч как в "чосинус".
	% er - ъ, еръ
	/Encoding [
%Oct 000 - 177 == 00 - 7F == 0 - 127
%.0			.1			.2			.3			.4			.5			.6			.7
%управляющие символы ASCII
 /.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	%00.
 /.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	%01.
%управляющие символы ASCII
 /.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	%02.
 /.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	%03.

 /space		/.notdef	/.notdef	/JO			/jo			/.notdef	/.notdef	/er			%04.
 /.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	%05.

 /.notdef	/.notdef	/.notdef	/jo			/.notdef	/.notdef	/.notdef	/.notdef	%06.
 /.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	/.notdef	%07.
 
 /JU		/A			/B			/C			/D			/JE			/F			/G			%10.
 /H			/I			/J			/K			/L			/M			/N			/O			%11.

 /P			/JA			/R			/S			/T			/U			/V			/W			%12.
 /X			/Y			/Z			/SH			/E			/SHX		/CH			/ER			%13.

 /ju		/a			/b			/c			/d			/je			/f			/g			%14.
 /h			/i			/j			/k			/l			/m			/n			/o			%15.

 /p			/ja			/r			/s			/t			/u			/v			/w			%16.
 /x			/y			/z			/sh			/e			/shx		/ch			/er			%17.

	] %Кодовая страница. Здесь должны быть мои буквы
	
	/FontBBox [0 0 0 0] %Потом заменить реальными значениями
	
	%Запускается для отрисовки символа
	%[this, charName]
	/BuildGlyph {
		
		%[this, charName]
		1 index 
		%[this, charName, this]
		
		% dup
		% /font-params get begin
			% g a add  0  % Width
			% 0  0  g  h  % Bounding box
			% setcachedevice
		% end
		
		/CharProcs get 
		%[this, charName, this.CharProcs]
		exch % Get CharProcs dictionary
		%[this, this.CharProcs, charName]
		
		2 copy known not % See if charname is known
		{pop /.notdef}
		if
		
		%[this, this.CharProcs, charName]
		2 index begin
			shared_config
			get exec % Execute BuildGlyph procedure with [this]
		end
	}
	
	%Устаревшая схема, для совместимости
	%[this, charCode]
	/BuildChar {
		1 index /Encoding 
		%[this, charCode, this.Encoding]
		get exch get
		%[this, charName]
		1 index /BuildGlyph get 
		%[this, charName, this.BuildGlyph]
		exec
	} bind
	
	/h 10 %высота прописных букв
	/c 7  %высота строчных букв
	/a 2  %расстояние между буквами
	/b 17 %интерлиньяж
	/e 6  %расстояние между словами
	/d 1  % толщина линии
	
	/shared_config{
	}
	
	/setconfig {
		/g exch def %определяем g
		/right g 1 sub def %легаси
		/m right 2 div def
		
		g a add  
		0
		% Width
			
		-2  
		-3  
		3 index  
		h 2 add
		% Bounding box
		setcachedevice

		d setlinewidth
		
		0.5 0.5 translate
		
		2 setlinecap			
		
		%g (g) == ==

	}
	
	%[g]
	/lowerbegin {
		0 dict begin
			setconfig
			/top c 1 sub def
			/right g 1 sub def
			/middle 3 def
			/center right 2 div def
	}	
	
	%[g]
	/upperfloorbegin {
		0 dict begin
			setconfig
			/top h 1 sub def
			/right g 1 sub def
			/middle 5 def
			/center right 2 div def
	}

	%[g]
	/upperceilbegin {
		0 dict begin
			setconfig
			/top h 1 sub def
			/right g 1 sub def
			/middle 4 def
			/center right 2 div def
	}
	
	%[g]
	/overupperbegin {
		0 dict begin
			/g exch def
			/top 1 def
			/right g 1 sub def
			/center right 2 div def
			0 h translate
	}	
	%[g]
	/overlowerbegin {
		0 dict begin
			/g exch def
			/top 1 def
			/right g 1 sub def
			/center right 2 div def
			0 c translate
	}

	/font-params <<
		
		/top 9
		/top 6
		/ht 5
		/hb 4
		
		/middle 3
		
		/top {
			0.5 add
		}
		/bot {
			0.5 sub
		}
		%Принимает на вход ширину буквы, устанавливает setcachedevice

		
		
		%[w]
		/x {
			0 top moveto
			0 0 lineto
			%[w] 
			1 xlinearcup
			ht 1 ylinearcleft
			0 ht lineto
		}
		
		%[w]
		/xc {
			0 top moveto
			0 0 lineto
			%[w] 
			1 xlinearcup
			middle 1 ylinearcleft
			0 middle lineto
		}
		
		
	>>
	
	/CharProcs <<
		/.notdef {}
		/space {			
			font-params
			begin
				e
				setconfig
			end
		}
		/A {
			7 upperceilbegin
				1 setlinejoin
				0 0 moveto
				center top lineto
				right 0 lineto
				center top div 2 mul dup 2 moveto
				right exch sub 2 lineto
				stroke
			end
		}
		/B {
			6 upperfloorbegin
				0 top moveto
				0 0 lineto
				1 right middle glifrc
				0 top moveto
				right 1 sub 0 rlineto
				stroke
			end
		}
		/W {
			6 upperfloorbegin
				0 top moveto
				0 0 lineto
				1 right middle glifrc
				0 top moveto
				right 1 sub 1 xlinearcdown
				middle 2 ylinearcleft
				stroke
			end
		}
		/G {
			4 upperfloorbegin
				0 0 moveto
				0 top lineto
				right 1 add top lineto
				stroke
			end
		}
		/D {
			5 upperfloorbegin
				-1 -1 moveto
				-1 0 lineto
				right 1 add 0 lineto
				0 -1 rlineto
				0 0 moveto
				1 setlinejoin 
				1  top lineto
				right top  lineto
				0 setlinejoin 
				right 0 lineto
				stroke
			end
		}
		/JE {
			5 upperfloorbegin
				right 0 moveto
				0 0 lineto
				0 top lineto
				right top lineto
				0 middle moveto
				3 0 rlineto
				stroke
			end
		}
		/JO {
			CharProcs /JE get exec
			5 overupperbegin
				1 setlinejoin 
				0 setlinecap
				0.5 top moveto
				1 0 rlineto
				1 0 rmoveto
				1 0 rlineto
				stroke
			end
		}
		/V {
			8 upperfloorbegin
				
				center 0 moveto
				center top lineto
				
				center middle moveto
				right top lineto
				center middle moveto
				0 top lineto
				
				center middle moveto 
				top middle sub center div dup
				1 exch rmoveto
				right 0 lineto
				
				center middle moveto
				-1 exch rmoveto
				0 0 lineto
				stroke
			end
		}
		/Z {
			5 upperfloorbegin
				1 setlinecap
				0 1 moveto
				1 1 -1 arcty
				right 2 xlinearcup
				middle 2 ylinearcleft
				-1 0 rlineto
				1 0 rmoveto
				2 1 1 arctx
				top 1 ylinearcleft
				0 1 xlinearcdown
				stroke
			end
		}
		/I {
			6 upperfloorbegin
				1 setlinejoin 
				0 top moveto
				0 0 lineto
				right top lineto
				right 0 lineto
				stroke
			end
		}
		/J {
			CharProcs /I get exec
			6 overupperbegin
				0 setlinecap
				1 top moveto
				3 0 rlineto
				stroke
			end
		}
		/K {
			5 upperfloorbegin
				0 0 moveto
				0 top lineto
				0 middle moveto
				right top lineto
				0 middle moveto 1 top middle sub middle div 1 rmoveto
				right 0 lineto
				stroke
			end
		}
		/L {
			6 upperfloorbegin
				0 0 moveto
				2 top lineto
				right top lineto
				right 0 lineto
				stroke
			end
		}
		/M {
			7 upperfloorbegin
				1 setlinejoin 
				0 0 moveto
				0 top lineto
				center middle lineto
				right top lineto
				right 0 lineto
				stroke
			end
		}
		/N {
			6 upperfloorbegin
				0 0 moveto
				0 top rlineto
				
				right 0 moveto
				0 top rlineto
				
				0 middle moveto
				right 0 rlineto
				stroke
			end
		}
		/O {
			6 upperfloorbegin
				0 0 moveto
				2 right top glifo
				stroke
			end
		}
		/P {
			6 upperfloorbegin
				0 0 moveto
				0 top lineto
				right top lineto
				right 0 lineto
				stroke
			end
		}
		/R {
			6 upperceilbegin
				0 0 moveto
				0 top lineto
				0 middle moveto
				1 right top glifrc
				stroke
			end
		}
		/S {
			6 upperceilbegin
				right top moveto
				1 0 0 glifc
				stroke
			end
		}
		/T {
			6 upperceilbegin
				center 0 moveto
				0 top rlineto
				0 top moveto
				right 0 rlineto
				stroke
			end
		}
		/U {
			6 upperceilbegin
				0 top moveto
				middle 1 ylinearcright
				right middle lineto
				right top moveto
				0 2 ylinearcleft
				1 0 lineto
				stroke
			end
		}
		/F {
			8 upperceilbegin
				center 0 moveto
				0 top rlineto
				0 2 moveto

					2 
					right 
					top 2 sub 
				glifo
				stroke
			end
		}
		/H {
			7 upperceilbegin
				0 0 moveto
				right top lineto
				0 top moveto
				right 0 lineto
				stroke
			end
		}
		/C {
			6 upperceilbegin
				0 top  moveto
				0 0 lineto
				g 0 lineto
				0 -1 rlineto
				right top moveto
				right 0 lineto
				stroke
			end
		}
		/CH {
			6 upperceilbegin
				0 top moveto
				middle 1 ylinearcright
				right middle lineto
				right top moveto
				right 0 lineto
				stroke
			end
		}
		/SH {
			8 upperceilbegin
				0 top moveto
				0 0 lineto
				right 0 lineto
				right top lineto
				center 0 moveto
				0 top rlineto
				stroke
			end
		}
		/SHX {
			8 upperceilbegin
				0 top moveto
				0 0 lineto
				right 0 lineto
				right top lineto
				center 0 moveto
				0 top rlineto
				right 1 add 0 moveto
				0 -1 rlineto
				stroke
			end
		}
		/ER {
			6 upperfloorbegin
				0 0 moveto
				1 right middle glifrc
				0 0 moveto
				0 top lineto
				-2 0 rlineto
				stroke
			end
		}
		/Y {
			7 upperfloorbegin
				0 0 moveto
				1 4 middle glifrc
				0 0 moveto
				0 top lineto
				right top moveto
				right 0 lineto
				stroke
			end		
		}
		/X {
			6 upperfloorbegin
				0 0 moveto
				1 right middle glifrc
				0 0 moveto
				0 top lineto
				stroke
			end
		}
		/E {
			6 upperceilbegin
				0 0 moveto
				1 right top glifrc
				right middle moveto
				center middle lineto
				stroke
			end
		}
		/JU {
			7 upperfloorbegin
				0 0 moveto 0 top lineto
				0 middle moveto	2 0 rlineto
				2 0 moveto
				2 right top glifo
				stroke
			end
		}
		/JA {
			6 upperceilbegin
				1 setlinecap
				right 0 moveto
				right top lineto
				
				1 0 middle glifc
				center middle moveto
				
				0 0 lineto
				stroke
			end
		}
		/a {
			5 lowerbegin
				right top moveto
				0 1 xlinearcdown
				0 1 ylinearcright
				right 1 xlinearcup
				right top lineto
				right 1 moveto
				1 -1 rlineto
				stroke
			end
		}
		/b {
			5 lowerbegin
				1 setlinejoin
				right 1 sub dup top moveto
				neg 3 rlineto
				right 0 rlineto
				0 0 moveto
				1 right top glifo
				stroke
			end
		}
		/w {
			5 lowerbegin
				0 top moveto
				right 1 xlinearcdown
				0 1 ylinearcleft
				0 1 xlinearcup
				top 3 add 1 ylinearcright
				2 1 xlinearcdown
				1 top lineto
				stroke
			end
		}
		/g {
			4 lowerbegin
				1 setlinejoin
				1 setlinecap
				0 top moveto 0 -1 rmoveto
				1 1 1 arcty
				right 1 xlinearcdown
				0 2 lineto
				0 1 ylinearcright
				right 0.5 add 1 xlinearcup
				stroke
			end
		}
		/d {
			5 lowerbegin
				0 top moveto 1 3 rmoveto
				right 1 xlinearcdown
				0 1 ylinearcleft
				0 1 xlinearcup
				top 1 ylinearcright
				right 1 xlinearcdown
				stroke
			end
		}
		/je {
			5 lowerbegin
				right 0 moveto
				0 1 xlinearcup
				top 1 ylinearcright
				right 1 xlinearcdown
				middle 1 ylinearcleft
				0 middle lineto
				stroke
			end
		}
		/jo {
			CharProcs /je get exec
			5 overlowerbegin
				1 setlinejoin 
				0 setlinecap
				0.5 top moveto
				1 0 rlineto
				1 0 rmoveto
				1 0 rlineto
				stroke
			end		
		}
		/v {
			7 lowerbegin
				center  0  moveto
				center  top lineto
				
				center  middle moveto
				right top lineto

				m  middle moveto
				0  top lineto

				center  middle moveto 0.5 0.5 rmoveto
				right 0  lineto
				center  middle moveto -0.5 0.5 rmoveto
				0  0  lineto
				stroke
			end
		}
		/z {
			4 lowerbegin
				1 setlinecap
				0 1 moveto
				1 1 -1 arcty
				right 1 xlinearcup
				middle 1 ylinearcleft
				-1 0 rlineto
				1 0 rmoveto
				1 1 1 arctx
				top 1 ylinearcleft
				0 1 xlinearcdown
				stroke
			end
		}
		/i {
			5 lowerbegin
				0 top moveto
				0 1 ylinearcright
				right 0 lineto
				right top lineto
				stroke
			end
		}
		/j {
			CharProcs /i get exec
			5 overlowerbegin
				%0 setlinecap
				1 top moveto
				2 0 rlineto
				stroke
			end		
		}
		/k {
			5 lowerbegin
				0 0 moveto
				0 top lineto
				0 middle 1 sub moveto
				right top lineto
				0 middle moveto 2 middle right div 2 mul 1 sub rmoveto
				right 0 lineto
				stroke
			end
		}
		/l {
			5 lowerbegin
				1 setlinejoin
				0 0 moveto
				2 top lineto
				0 setlinejoin
				right top lineto
				right 0 lineto
				stroke
			end
		}
		/m {
			5 lowerbegin
				1 setlinejoin
				0 0 moveto
				0 top lineto
				center middle lineto
				right top lineto
				right 0 lineto
				stroke
			end
		}
		/n {
			5 lowerbegin
				0 0 moveto
				0 top lineto
				0 middle moveto
				right middle lineto
				right 0 moveto
				right top lineto
				stroke
			end
		}
		/o {
			5 lowerbegin
				0 0 moveto
				1 right top glifo
				stroke
			end
		}
		/p {
			5 lowerbegin
				0 0 moveto
				0 top lineto
				right 1 xlinearcdown
				right 0 lineto
				stroke
			end
		}
		/r {
			5 lowerbegin
				0 top moveto
				0 -3 lineto
				0 0 moveto
				1 right top glifrc
				stroke
			end
		}
		/s {
			4 lowerbegin
				right top moveto
				1 0 0 glifc
				stroke
			end
		}
		/t {
			7 lowerbegin
				0 0 moveto
				0 top lineto
				right 1 xlinearcdown
				right 0 lineto
				m top moveto
				m 0 lineto
				stroke
			end
		}
		/u {
			5 lowerbegin
				0 top moveto
				0 1 ylinearcright
				right 0 lineto
				right top moveto
				-3 2 ylinearcleft
				1 -3 lineto
				stroke
			end
		}
		/f {
			7 lowerbegin
				0 0 moveto
				1 right top glifo
				center top moveto 0 2 rmoveto 
				center -3 lineto
				stroke
			end
		}
		/h {
			5 lowerbegin
				0 0 moveto
				right top lineto
				right 0 moveto
				0 top lineto
				stroke
			end
		}
		/c {
			4 lowerbegin
				0 top moveto
				0 0 lineto
				right 1 add 0 lineto
				0 -1 rlineto
				right top moveto
				right 0 lineto
				stroke
			end
		}
		/ch {
			5 lowerbegin
				0 top moveto
				middle 1 ylinearcright
				right middle lineto
				right top moveto
				right 0 lineto
				stroke
			end
		}
		/sh {
			7 lowerbegin
				0 top moveto
				0 1 ylinearcright
				right 0 lineto
				right top lineto
				center 0 moveto
				center top lineto
				stroke
			end
		}
		/shx {
			7 lowerbegin
				0 top moveto
				0 1 ylinearcright
				right 0 lineto
				right top lineto
				center 0 moveto
				center top lineto
				right 1 add 0 moveto
				0 -1 rlineto
				stroke
			end
		}
		/er {
			5 lowerbegin
				0 0 moveto
				1 right middle glifrc
				0 0 moveto
				0 top lineto
				-1 0 rlineto
				stroke
			end
		}
		/y {
			6 lowerbegin
				0 0 moveto
				1 3 middle glifrc
				0 0 moveto
				0 top lineto
				right 0 moveto
				right top lineto
				stroke
			end
		}
		/x {
			5 lowerbegin
				0 0 moveto
				1 right middle glifrc
				0 0 moveto
				0 top lineto
				stroke
			end
		}
		/e {
			5 lowerbegin
				0 0 moveto
				1 right top glifrc
				right middle moveto
				-2 0 rlineto
				stroke
			end
		}
		/ju {
			6 lowerbegin
				0 0 moveto 0 top lineto
				0 middle moveto 2 0 rlineto
				2 0 moveto
				1 right top glifo
				stroke
			end
		}
		/ja {
			5 lowerbegin

				right 0 moveto
				right top lineto
				
				1 0 middle glifc
				center middle moveto
				
				0 0 lineto
				stroke
			end
		}
	>>
	
>>  dup begin
	(font-tools.ps) run
end

/rus-eskd-font exch definefont pop