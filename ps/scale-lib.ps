% Вектора, отображающие пару длина/высота строки на одну из координат точки прицеливания
% {width height}
/mark-target 
8 dict dup begin
	/left { 0 0 } def % абсцисса начала строки
	/first { 0 0.5 } def % абсцисса середины первого символа
	/center { 0.5 0 } def % абсцисса середины строки
	/last { 1 -0.5 } def % абсцисса середины последнего символа
	/right { 1 0 } def % абсцисса конца строки
	/top {0 1} def % ордината линии прописных
	/middle {0 0.5} def % средняя ордината
	/bottom {0 0} def % ордината базовой линии
end def

%[width, height, xw, xh, yw, yh]
/makepoint {
	2 2index 2cdot % y
	%[width, height, xw, xh, y]
	5 1 roll
	%[y, width, height, xw, xh]
	2cdot % x
	exch
} def
%[x, y]

% Ограничивает число двумя лимитами
% [x, min, max]
/two_lim {
	3 dict begin
		/max exch def
		/min exch def
		/x exch def
		x max gt
		{ max }
		{
			x min lt
			{ min }
			{ x }
			ifelse
		}
		ifelse
	end
} def

% возвращает 
% neg, при cond < 0
% pos, при cond >= 0
% [cond, neg, pos]
/select_by_0 {
	2 dict begin
		/p exch def
		/n exch def
		0 lt
		{ n }
		{ p }
		ifelse
	end
} def

% Находит абсциссу точки на границе прямоугольной области при заданных ограничениях
% cos, sin - указывают направление на искомую точку (направляющие косинусы)
% xneg - абсцисса левой границы области
% xpos - абсцисса правой границы области
% yneg - ордината нижней границы области
% ypos - ордината верхней границы области
%[cos, sin, xneg, xpos, yneg, ypos] 
/sizex {
	0 dict begin
		/ypos exch def
		/yneg exch def
		/xpos exch def
		/xneg exch def
		/s exch def
		/c exch def
	
		c 0 eq {
			0
		}
		{
			s 0 eq
			{
				c xneg xpos select_by_0
			}
			{
				/t c s div def % котангенс
				/x
					t
					s yneg ypos select_by_0
					mul
				def
				
				x xneg xpos two_lim
			}
			ifelse
		}
		ifelse
	end
} def

%Рассчитывает вектор смещения точки прицеливания относительно точки входа в прямоугольную область
% a - курс входа
% targetX, targetY - относительные координаты точки прицеливания внутри прямоугольной области (от её левого нижнего угла)
% width, height - размеры прямоугольной области
% [width, height, targetX, targetY, a]
/bordervector {
	0 dict begin
		/a exch def
		% рассчитаем границы
		2dup %target 
		2neg
		/yneg exch def
		/xneg exch def
		%size target 
		2sub
		/ypos exch def
		/xpos exch def
		
		/s a sin neg def
		/c a cos neg def
		
		%x
		c s xneg xpos yneg ypos
		sizex
		
		%y 
		%та же функция зеркально относительно биссектрисы
		s c yneg ypos xneg xpos
		sizex
		
	end
} def

% Выводит строку в нужной позиции относительно текущей точки
% xw, xh, yw, yh - матрица точки прицеливания
% a - курс входа
%[str, xw, xh, yw, yh, a]
/showlabel {
	0 dict begin
		/a exch def
		/ty 2edef
		/tx 2edef
		%str
		dup 
		utf8stringsize % size
		2dup
		tx ty makepoint %size, target
		2dup /target 2edef
		a %угол
		bordervector 2neg
		rmoveto %cross
		target 2neg
		rmoveto utf8show
	end
} def

% Поворачивает координаты в направление dir, рисует штрих, а потом делает отступ
% dir - направление штриха в градусах
% length - длина штриха
% space - длина отступа
%[ space, length, dir ]
/rendermark {
	rotate
	0 rlineto
	0 rmoveto
	gsave stroke grestore
} def

% Рисует надписанный штрих
% str - строка
% xw, xh, yw, yh - матрица точки прицеливания
% a - курс входа в прямоугольную область
% dir - направление штриха в градусах
% length - длина штриха
% space - длина отступа
% [str, xw, xh, yw, yh, a, dir, space, length]
/labelmark {
	3 -1 roll
	gsave
		rotate
		0 rlineto
		0 rmoveto
		gsave stroke grestore

		dup neg rotate

		showlabel
	grestore
} def

% Рисует немой штрих
% dir - направление штриха в градусах
% length - длина штриха
%[ length, dir ]
/mutemark {
	gsave
		rotate
		0 rlineto
		stroke
	grestore
} def

% Выводит надпись к точке
% str - строка
% xw, xh, yw, yh - матрица точки прицеливания
% a - курс входа в прямоугольную область
% dir - направление отступа в градусах
% space - длина отступа
% [str, xw, xh, yw, yh, a, dir, space]
/label {
	exch
	gsave
		rotate
		0 rmoveto

		dup neg rotate

		showlabel
	grestore
} def